@model CrmExtForms.RCRDataModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <table style="width:100%;">
            <tr>
                <td>
                    <div id="header" style="float:left;left:0;"><h2>Thinking about attending Lethbridge College?</h2></div>
                </td>
                <td>
                    <div id="logo" style="float:right; right:0;"><img src="~/Content/Images/logo.jpg" alt="logo" /></div>
                </td>
            </tr>
        </table>
    </div>
    <div style="margin-top:40px">
        <br />
        <h4>To learn more about becoming a student at Lethbridge College, please fill out the form below. We will get back to you with information about programs and services that interest you. For all other inquires, please <a href="http://www.lethbridgecollege.ca/contact-us" target="_blank">click here</a>.</h4>
        <br />
    </div>
    <div class="form-body">
        @if (Model.EnableFirstName)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName, "*", new { @class = "text-danger" })
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        }

        @if (Model.EnableLastName)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName, "*", new { @class = "text-danger" })
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        }

        @if (Model.EnableEmailAddress)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.EmailAddress)
                @Html.ValidationMessageFor(model => model.EmailAddress, "*", new { @class = "text-danger" })
                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        }

        @if (Model.EnableMobilePhone)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.MobilePhone)
                @Html.ValidationMessageFor(model => model.MobilePhone, "*", new { @class = "text-danger" })
                @Html.EditorFor(model => model.MobilePhone, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        }

        @if (Model.EnableBirthDate)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.BirthDate)
                @Html.ValidationMessageFor(model => model.BirthDate, "*", new { @class = "text-danger" })
                @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        }

        @if (Model.EnableMailingCity)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.MailingCity)
                @Html.ValidationMessageFor(model => model.MailingCity, "*", new { @class = "text-danger" })
                @Html.EditorFor(model => model.MailingCity, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        }

        @if (Model.EnableMailingProv)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.MailingProv)
                @Html.ValidationMessageFor(model => model.MailingProv, "*", new { @class = "text-danger" })
                @Html.EditorFor(model => model.MailingProv, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        }

        @if (Model.EnableProgramInterest)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ProgramInterest)
                @Html.DropDownListFor(model => model.ProgramInterest, (IEnumerable<SelectListItem>)Model.ProgramOptions, "Select Program", new { @class = "form-control" })
            </div>
        }

        @if (Model.EnableStartTerm)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.StartTerm)
                @Html.DropDownListFor(model => model.StartTerm, (IEnumerable<SelectListItem>)Model.TermOptions, "Select Term", new { @class = "form-control" })
            </div>
        }

        @if (Model.EnableServicesInterest)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.EnableServicesInterest)<br />
                <table>
                    <tr>
                        <td>@Html.EditorFor(model => model.AthleticsInterest, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td style="padding-left:20px;">Althletics</td>
                    </tr>
                    <tr>
                        <td>@Html.EditorFor(model => model.ResidencyInterest, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td style="padding-left:20px;">Residence</td>
                    </tr>
                    <tr>
                        <td>@Html.EditorFor(model => model.AccessibilityInterest, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td style="padding-left:20px;">Accessibility Services</td>
                    </tr>
                    <tr>
                        <td>@Html.EditorFor(model => model.WellnessInterest, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td style="padding-left:20px;">Wellness Services</td>
                    </tr>
                    <tr>
                        <td>@Html.EditorFor(model => model.AwardsInterest, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td style="padding-left:20px;">Financial Awards & Student Aid</td>
                    </tr>
                </table>
            </div>
        }

        @if (Model.EnableServicesInterest)
        {
            <div class="form_group">
                @Html.LabelFor(model => model.EnableServicesInterest)<br />
                <table>
                    <tr>
                        <td>@Html.EditorFor(model => model.SfadInterest, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td style="padding-left:20px;">Student for a Day</td>
                    </tr>
                    <tr>
                        <td>@Html.EditorFor(model => model.CtInterest, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td style="padding-left:20px;">Campus Tour</td>
                    </tr>
                </table>
            </div>
            <br />
        }

        @if (Model.EnablePriorActivity)
        {
            <div class="form_group">
                @Html.LabelFor(model => model.PriorActivity)<br />
                <table>
                    <tr>
                        <td>@Html.RadioButtonFor(model => model.PriorActivity, "HighschoolStudent")</td>
                        <td style="padding-left:20px;">Highschool Student</td>
                    </tr>
                    <tr>
                        <td>@Html.RadioButtonFor(model => model.PriorActivity, "HighschoolGraduate")</td>
                        <td style="padding-left:20px;">Graduated Highschool</td>
                    </tr>
                    <tr>
                        <td>@Html.RadioButtonFor(model => model.PriorActivity, "Other")</td>
                        <td style="padding-left:20px;">Other</td>
                    </tr>
                </table>
            </div>
            <br />
        }
        @if (Model.EnableIndigenous)
        {
            <div class="form_group">
                @Html.LabelFor(model => model.Indigenous)<br />
                <table>
                    <tr>
                        <td>@Html.RadioButtonFor(model => model.Indigenous, "Yes")</td>
                        <td style="padding-left:20px;">Yes</td>
                    </tr>
                    <tr>
                        <td>@Html.RadioButtonFor(model => model.Indigenous, "No")</td>
                        <td style="padding-left:20px;">No</td>
                    </tr>
                </table>
            </div>
            <br />
        }
        <input type="submit" value="Submit Form" class="btn btn-default" />
        <br />
    </div>

    <h5>Your personal information is being collected under the authority of subsection 33(c) of Alberta’s Freedom of Information and Protection of Privacy Act for the purpose of managing your admission to the College, your enrolment in courses and programs, and your student status; administering scholarships and awards; monitoring academic progress; academic planning and research; alumni relations; administering College policies; and contacting you about College courses, programs, and services. It may be used and disclosed to other College departments and employees for this purpose, or for a use consistent with this purpose. If you have a question about the collection, use, disclosure or protection of your personal information, please contact Lethbridge College’s Manager of Institutional Compliance by phoning (403) 320-3202 ext. 5703, emailing <a href="privacy@lethbridgecollege.ca">privacy@lethbridgecollege.ca</a>, or writing to 3000 College Dr S, Lethbridge, Alberta T1K 1L6 c/o Manager of Institutional Compliance</h5>
    <h5>By completing this form, you are consenting to receive emails from Lethbridge college about the application and registration process. You may unsubscribe at any time.</h5>

    @Html.HiddenFor(m => m.InputType, new { Value = "" })
    @Html.HiddenFor(m => m.RequiredField, new { Value = "" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/lc_rcr")
}


